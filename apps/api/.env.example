# Example env for apps/api - copy to .env and fill values for local dev

# Shared JWT secret used by better-auth and the API to sign/verify tokens
BETTER_AUTH_JWT_SECRET=change_me_make_secure

DATABASE_URL="mysql connection string"

GOLF_GENIUS_API_KEY="api key"
GOLF_GENIUS_BASE_URL="https://www.golfgenius.com"
GOLF_GENIUS_CATEGORY_ID="golf genius category"
GOLF_GENIUS_TIMEOUT=30000
GOLF_GENIUS_MAX_RETRIES=3
GOLF_GENIUS_RETRY_DELAY_BASE=1000

# API runtime env examples
NODE_ENV=development
PORT=3333

# CORS: comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3300

 # Mail configuration
MAIL_FROM=noreply@example.com
MAIL_HOST=smtp.example.com
MAIL_PASS=your-password
MAIL_PORT=587
MAIL_USER=your-email@example.com

# Stripe configuration
STRIPE_SECRET_KEY="sk_test_secret"
STRIPE_PUBLIC_KEY="pk_test_secret"
STRIPE_WEBHOOK_SECRET="whsec_secret"
STRIPE_API_VERSION="2024-12-18.acacia"
# Example env for apps/web - copy to .env and fill values for local dev

# Path to SQLite file used by better-auth (mounted from repo docker/sqlite/auth.db)
BETTER_AUTH_DATABASE=./data/auth.db

# Secret used by better-auth for signing (change for production)
BETTER_AUTH_SECRET=change_me
# Shared JWT secret used to verify tokens between web and API (keep this secret)
BETTER_AUTH_JWT_SECRET=change_me_make_secure

# Base URL path for client to call auth endpoints
NEXT_PUBLIC_BETTER_AUTH_BASE_URL=/api/auth

SEED_ADMIN_EMAIL=someone@example.com
SEED_ADMIN_PASSWORD=super_secret

# Backend API URL for server-side calls
API_URL=http://localhost:3333

# Next.js runtime env examples
NODE_ENV=development
PORT=3000

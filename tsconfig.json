{
	"compilerOptions": {
		"target": "ES2022",
		"module": "Node16",
		"lib": ["ES2022", "DOM"],
		"strict": true,
		"moduleResolution": "node16",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"rootDir": ".",
		"baseUrl": ".",
		"paths": {
			"dto": ["packages/dto/dist"]
		},
		"resolveJsonModule": true,
		"noEmit": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"types": ["node"]
	},
	"include": ["packages/**/*", "apps/**/*"]
}
